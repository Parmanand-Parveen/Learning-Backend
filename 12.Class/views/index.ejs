<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="body h-screen w-screen bg-zinc-900">
        <form class="p-4 flex flex-col gap-4 text-white" action="/create" method="post">
            <input class="w-full rounded-md bg-zinc-800 p-2 outline-none" type="text" placeholder="Name" name="name">
            <input class="w-full rounded-md bg-zinc-800 p-2 outline-none" type="number" placeholder="Age"  name="age">
            <input class="w-full rounded-md bg-zinc-800 p-2 outline-none" type="email" placeholder="Email" name="email">
            <button class="py-2 px-4 bg-blue-500 text-white" type="submit">Create User</button>
        </form>
       <div class="flex gap-4 flex-wrap p-4">
        <% users.map(function(val){  %>
            <div class="  max-w-max bg-zinc-800 p-4 text-white" key="<%=val.id%>">
                    <h1 class="text-3xl"><%=val.name%></h1>
                    <p><%=val.age%></p>
                    <p><%=val.email%></p>
                    <div class="flex gap-3">
                        <a class="text-blue-500" href="/edit/<%=val._id%>">Edit</a>
                        <a class="text-red-500" href="/delete/<%=val._id%>">Delete</a>
                    </div>
            </div>
          
                
             <% } )%>
       </div>
    </div>
     
   

</body>
</html>